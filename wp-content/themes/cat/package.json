{
	"name": "underscores",
	"version": "1.0.0",
	"description": "Hi. I'm a starter theme called _s, or underscores, if you like. I'm a theme meant for hacking so don't use me as a Parent Theme. Instead try turning me into the next, most awesome, WordPress theme out there. That's what I'm here for.",
	"author": "Automattic Theme Team",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress",
		"Theme"
	],
	"homepage": "https://github.com/Automattic/_s#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/_s.git"
	},
	"bugs": {
		"url": "https://github.com/Automattic/_s/issues"
	},
	"prettier": "@wordpress/prettier-config",
	"devDependencies": {
		"@wordpress/env": "^4.9.0",
		"@wordpress/eslint-plugin": "^12.6.0",
		"@wordpress/prettier-config": "^1.4.0",
		"@wordpress/scripts": "^23.4.0",
		"dir-archiver": "^1.1.1",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"node-sass": "^7.0.1",
		"prettier": "^2.7.1",
		"rtlcss": "^3.5.0"
	},
	"rtlcssConfig": {
		"options": {
			"autoRename": false,
			"autoRenameStrict": false,
			"blacklist": {},
			"clean": true,
			"greedy": false,
			"processUrls": false,
			"stringMap": []
		},
		"plugins": [],
		"map": false
	},
	"scripts": {
		"start:watch": "wp-scripts start 'js/block/editor.js' --output-path=./build/block/",
		"start:scss": "node-sass sass/ -o ./build/block --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
		"env": "wp-env",
		"format": "wp-scripts format",
		"lint:scss": "wp-scripts lint-style 'sass/**/*.scss'",
		"lint:js": "wp-scripts lint-js 'js/**/*.js'",
		"lint:js:src:fix": "wp-scripts lint-js 'js/**/*.js' --fix",
		"build": "wp-scripts build",
		"bundle": "dir-archiver --src . --dest ../_s.zip --exclude .DS_Store .stylelintrc.json .eslintrc .git .gitattributes .github .gitignore README.md composer.json composer.lock node_modules vendor package-lock.json package.json .travis.yml phpcs.xml.dist sass style.css.map yarn.lock"
	}
}
